<div>
  <div class="center-content">
    <div class="floating-text">
      <div class="park-information">
        <div class="park-title row">
          <h1>{{name}}</h2>
        </div>
        {{#if description}}
          <div class="park-description row">
            <p>{{description}}</p>
          </div>  
        {{/if}}
        {{#each activities}}
          <div class="park-title row" style="float:left;">
            {{name}}
          </div>
        {{/each}}
      </div>
    </div>  
  </div>

  <div id="carousel-example-generic" data-ride="carousel" class="carousel slide">

    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-example-generic" data-slide-to="1"></li>
      <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" id="carousel-images-container">
      <div class="item active">
        <div class="carousel-image" style="background-image: url('../../../static/img/4-JamaicaPondJP.JPG');" alt="..."></div>
        <div class="carousel-caption"></div>
      </div>
      <div class="item">
        <div class="carousel-image" style="background-image: url('../../../static/img/Nkraft (Charles River Bike Path Sunset 1).jpg');" alt="..."></div>
        <div class="carousel-caption"></div>
      </div>
      <div class="item">
        <div class="carousel-image" style="background-image: url('../../../static/img/13-OMalleyWaterfrontPark-Chelsea.JPG');" alt="..."></div>
        <div class="carousel-caption"></div>
      </div>
    </div>
  </div>  
</div>
<div class="quick-facts">
  <div class="center-content">
    <h2>Quick Facts</h2>
  </div>
  <div id="orbs" class="owl-carousel orbs">
    {{#each activities}}
      <div class="item circle">{{name}}</div>
    {{/each}}
  </div>
</div> 
<div class="nearby-parks">
  <div class="center-content">
    <h2>Recommended Parks</h2>
  </div>
  <div id="nearby" class="owl-carousel orbs">
    {{#each recommended_parks}}
      <div class="item"><img src="http://placekitten.com/g/300/200" alt="Owl Image"><a href="#{{url}}">{{name}}</a></div>
    {{/each}}
  </div>
</div> 
<div class="recommended-parks">
  <div class="center-content">
    <h2>Spaces Nearby</h2>
  </div>
  <div id="recommended" class="owl-carousel orbs">
    {{#each nearby_parks}}
      <div class="item"><img src="http://placekitten.com/g/300/200" alt="Owl Image"><a href="#{{url}}">{{name}}</a></div>
    {{/each}}
  </div>
</div> 